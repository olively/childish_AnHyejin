<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.bamboo.mapper.FreeTalkBoardMapper">
	<select id="getList" resultType="com.bamboo.domain.FreeTalkBoard_VO">
		SELECT * FROM FreeTalk_Board
	</select>
	
	<select id="getRead" resultType="com.bamboo.domain.FreeTalkBoard_VO">
		SELECT * FROM FreeTalk_Board WHERE p_bid = #{p_bid}
	</select>
	
	<insert id="write">
		INSERT INTO FreeTalk_Board (f_uid, title, content)
		VALUES (#{f_uid}, #{title}, #{content})
	</insert>
</mapper>